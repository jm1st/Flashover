<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.MRK201" parent="Theme.Material3.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="OutlinedBoxWhite" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">#F28500</item>
        <item name="android:textColorHint">#F28500</item>
        <item name="hintTextColor">#F28500</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>

        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>

        <item name="android:layout_margin">15dp</item>

    </style>

</resources>