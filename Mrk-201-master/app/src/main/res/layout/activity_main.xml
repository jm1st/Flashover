<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#171717">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout

            android:id="@+id/appbar"

            android:layout_width="match_parent"
            android:layout_height="56dp"

            android:background="#1E1E1E"

            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title_appbar"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"

                    android:text="PONKAN"
                    android:textColor="#F28500"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

                <ImageButton

                    android:id="@+id/account_image"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/title_appbar"
                    app:layout_constraintTop_toTopOf="parent"

                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="80dp"

                    android:src="@drawable/baseline_account_circle_24"
                    android:background="#1e1e1e"

                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    />

                <ImageButton

                    android:id="@+id/add_incident_image"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/title_appbar"

                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="16dp"

                    android:src="@drawable/baseline_post_add_24"
                    android:background="#1e1e1e"

                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/announcement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="250dp"
            android:layout_marginBottom="325dp"

            app:layout_constraintTop_toBottomOf="@+id/appbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:text="STILL UNDER TESTING"
            android:textColor="#FFFFFF"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="325dp"

            app:layout_constraintTop_toBottomOf="@+id/announcement"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:text="Kansa pa ba?"
            android:textColor="#FFFFFF"
            android:textAlignment="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>